}

/**
 * Implements hook_preprocess_HOOK() for menu__role_menu.
 */
function isp_core_preprocess_menu__role_menu(&$variables) {
  $icons = [
//    'eabax_core.implementor.implementation' => 'fa fa-compass',
  ];
  _isp_core_set_menu_items_icon($variables['items'], $icons);
}
function _isp_core_set_menu_items_icon(&$items, $icons) {
  foreach ($items as $key => $item) {
    if (isset($icons[$key])) {
      $items[$key]['icon'] = $icons[$key];
    }

    if (!empty($items['below'])) {
      _isp_core_set_menu_items_icon($item['below'], $icons);
    }
  }
}