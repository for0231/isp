<div id="speech-btn" class="btn-header transparent pull-right hidden-sm hidden-xs">
  <div>
    <a href="javascript:void(0)" title="{{ 'Voice Command'|t }}" data-action="voiceCommand"><i class="fa fa-microphone"></i></a>
    <div class="popover bottom"><div class="arrow"></div>
      <div class="popover-content">
        <h4 class="vc-title">{{ 'Voice command activated'|t }}<br><small>{{ 'Please speak clearly into the mic'|t }}</small></h4>
        <h4 class="vc-title-error text-center">
          <i class="fa fa-microphone-slash"></i>{{ 'Voice command failed'|t }}
          <br><small class="txt-color-red">{{ 'Must'|t }} <strong>{{ '"Allow"'|t }}</strong> {{ 'Microphone'|t }}</small>
          <br><small class="txt-color-red">{{ 'Must have'|t }} <strong>{{ 'Internet Connection'|t }}</strong></small>
        </h4>
        <a href="javascript:void(0);" class="btn btn-success" onclick="commands.help()">{{ 'See Commands'|t }}</a>
        <a href="javascript:void(0);" class="btn bg-color-purple txt-color-white" onclick="$('#speech-btn .popover').fadeOut(50);">{{ 'Close Popup'|t }}</a>
      </div>
    </div>
  </div>
</div>